{
  "name": "astro-portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:prod": "astro build",
    "preview": "astro preview",
    "serve": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "lint:style": "stylelint \"src/**/*.{css,scss}\" --allow-empty-input",
    "lint:style:fix": "stylelint \"src/**/*.{css,scss}\" --fix --allow-empty-input",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "astro check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run type-check && npm run lint && npm run lint:style && npm run test && npm run test:e2e",
    "optimize:images": "echo 'Images are optimized by Astro build process'",
    "analyze:bundle": "npm run build && npx astro build --analyze",
    "lighthouse": "npm run build && npm run preview & sleep 5 && npx lighthouse http://localhost:4321 --output=html --output-path=./lighthouse-report.html && pkill -f 'astro preview'"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/sitemap": "^3.4.1",
    "astro": "^5.12.0",
    "astro-robots": "^2.3.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.54.1",
    "@testing-library/dom": "^10.4.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "sharp": "^0.34.3",
    "stylelint": "^16.22.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "vitest": "^3.2.4"
  }
}
